  owner     = {Simmhan},
  publisher = {Elsevier},
  timestamp = {2016.07.20},
  url       = {http://ceng.usc.edu/~simmhan/pubs/moreau-fgcs-2011.pdf},
}

@Article{Simmhan:fgcs:2011,
